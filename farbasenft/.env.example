# Environment Variables Template
# Copy this file to .env.local and fill in your actual values
# NEVER commit .env.local to git!

# Wallet & Blockchain
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id
NEXT_PUBLIC_ONCHAINKIT_API_KEY=your_onchainkit_api_key
NEXT_PUBLIC_PAYMASTER_RPC_URL=your_paymaster_rpc_url
NEXT_PUBLIC_BASE_RPC_URL=https://base-mainnet.infura.io/v3/8683d87e67a54b6ba92bfa4f8dfed337

# IPFS & Pinata (choose one or configure all)
PINATA_JWT=your_pinata_jwt_token
PINATA_API_KEY=your_pinata_api_key
PINATA_SECRET_API_KEY=your_pinata_secret_api_key

# Infura IPFS (optional alternative to Pinata)
INFURA_PROJECT_ID=8683d87e67a54b6ba92bfa4f8dfed337
INFURA_PROJECT_SECRET=your_infura_project_secret

# Filebase IPFS (optional alternative to Pinata)
FILEBASE_KEY=your_filebase_api_key

# NFT APIs
TATUM_API_KEY=your_tatum_api_key

# Farcaster & Neynar
NEYNAR_API_KEY=your_neynar_api_key
NEYNAR_WEBHOOK_URL=your_neynar_webhook_url

# Base Mini App
NEXT_PUBLIC_APP_URL=https://your-domain.com
FARCASTER_HEADER=your_farcaster_header
FARCASTER_PAYLOAD=your_farcaster_payload
FARCASTER_SIGNATURE=your_farcaster_signature
BASE_BUILDER_OWNER_ADDRESS=0x_your_address

# Smart Contracts
NEXT_PUBLIC_SBT_CONTRACT_ADDRESS=0x_your_contract_address
NEXT_PUBLIC_NFT_CONTRACT_ADDRESS=0x_your_nft_contract_address

# Marketplace Contract Configuration
# Replace with your marketplace contract address on Base
NEXT_PUBLIC_MARKETPLACE_CONTRACT_ADDRESS=0x_your_marketplace_contract_address
# Function names for marketplace operations
NEXT_PUBLIC_MARKETPLACE_BUY_FUNCTION=buyListing
NEXT_PUBLIC_MARKETPLACE_SELL_FUNCTION=listToken
# Optional: Custom ABI for marketplace (JSON array format)
# If not provided, defaults to standard functions above
# NEXT_PUBLIC_MARKETPLACE_BUY_ABI=[{"inputs":[{"name":"listingId","type":"uint256"}],"name":"buyListing","outputs":[],"stateMutability":"payable","type":"function"}]
# NEXT_PUBLIC_MARKETPLACE_SELL_ABI=[{"inputs":[{"name":"tokenId","type":"uint256"},{"name":"price","type":"uint256"}],"name":"listToken","outputs":[],"stateMutability":"nonpayable","type":"function"}]

# NFT Gallery Configuration
NEXT_PUBLIC_IMAGE_CDN=https://ipfs.io/ipfs
NEXT_PUBLIC_METADATA_PROXY=https://cloudflare-ipfs.com/ipfs
